buildchain: \ pthList .>
{
  l1: pthList.car
  l2: pthList.cdr.car
  lr: pthList.cdr.cdr
  tmp: [foldl (\ p e .> [linkpaths p e]) l2 lr]
  t1: [intersection l1 tmp]
  ttmp: [intersection tmp l1]
  [meetpaths t1--[continuous_approximator l1 ttmp.p]
             ttmp--[continuous_approximator tmp t1.p]]
}
